---
import { BaseLayout, Footer } from "cmdesigns";
import favicon from "../favicon.png";
import Header from "../components/Header.astro";

export interface Props {
    title?: string;
    lang?: string;
}

let { title, lang = "en" } = Astro.props;
title = title ? `${title} | pixel` : "pixel aka. chrissx";
---

<BaseLayout {favicon} {lang} {title} description="pixel's very cool website">
    <Header />
    <div class="content">
        <slot />
    </div>
    <Footer
        start={2021}
        rightsholder="Pixel Häußler, chrissx Media"
        link="https://github.com/chrissxMedia/pixel.chrissx.de"
    />
</BaseLayout>

<style>
    :global(body) {
        font-family: var(--minecraft);
        max-width: 1000px;
        margin: 0 auto;
    }
    .content {
        margin: 0 0.5em;
    }
</style>
